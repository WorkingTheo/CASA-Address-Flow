{% extends "layouts/journey.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}

{% block journey_form %}
  <div class="govuk-width-container">
    <h1 class="govuk-heading-l">Confirm address</h1>
    <p>6 addresses found for <b>wr11nl</b> and <b>1</b>. <a href="#">Search again</a></p>

    <h2>{{ formData }}</h2>

    {{ govukInsetText({
      html: formData.address
    }) }}

    <p class="govuk-body"><a href="/main/address-input" class="govuk-link">Use a different address</a></p>
    <p class="govuk-body govuk-!-margin-bottom-0"><a href="/sub/manual-address" class="govuk-link">Enter address manually</a></p>
  </div> 
{% endblock %}